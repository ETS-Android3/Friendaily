<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4f4f4f"
    tools:context=".Activity.FindNewFriendActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="393dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/nearByBackMain"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/left_label"
            android:src="@drawable/img_15">

        </ImageView>

        <TextView
            android:layout_width="263dp"
            android:layout_height="43dp"
            android:layout_marginTop="15dp"
            android:layout_weight="7"
            android:background="@drawable/btn_shape"
            android:gravity="center"
            android:text="Find Nearby People"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/searchNearby"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/left_label"
            android:src="@android:drawable/ic_menu_search">

        </ImageView>
    </LinearLayout>

    <ListView
        android:id="@+id/nearbyList"
        android:layout_width="404dp"
        android:layout_height="611dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>
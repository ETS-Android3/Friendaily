<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6F8"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/moment_content"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:gravity="top"
            android:hint="@string/post_hint"
            android:maxLength="500"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/moment_image"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            app:srcCompat="@mipmap/add_photo" />

        <Button
            android:id="@+id/moment_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
            android:background="@color/text_yellow"
            android:gravity="center"
            android:text="@string/post_btn"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </LinearLayout>

</ScrollView>